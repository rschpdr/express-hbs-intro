<div class="card" style="width: 18rem">
  <img src="{{ picture }}" class="card-img-top" alt="{{ name }}" />
  <div class="card-body">
    <h5 class="card-title">{{ name }}</h5>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><strong>Age: </strong>{{ age }}</li>
    <li class="list-group-item"><strong>Species: </strong>{{ species }}</li>
    <li class="list-group-item"><strong>Color: </strong>{{ color }}</li>
    <li class="list-group-item"><strong>Star Sign: </strong>{{ starSign }}</li>
  </ul>
  <div class="card-body">
    <a href="#" class="btn btn-primary">Adopt!</a>
  </div>
</div>
